<% if current_user.present? %>

    <h4>我的分享</h4>

    <% my_gists.each do |gist| %>
        <div class="muted">
          <% if gist.is_public %>
              <i class="icon-pencil"></i>&nbsp;
          <% else %>
              <i class="icon-home"></i>&nbsp;
          <% end %>
          <%= link_to gist.title, gist %>
          <br/>
          <small>
            created <%= time_ago_in_words(gist.created_at) + ' ago' %>
          </small>
        </div>
    <% end %>
    <small>
      <%= link_to "更多...", user_path(current_user) %>
    </small>
    <hr/>

<% end %>
